<?xml version="1.0" encoding="utf-8"?>
<Window
	x:Class="WpfProbak.MainWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:local="clr-namespace:WpfProbak"
	mc:Ignorable="d"
	Title="Lottó"
	Height="550"
	Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition
				Width="2*" />
            <ColumnDefinition
				Width="1*" />
        </Grid.ColumnDefinitions>
        <WrapPanel
			x:Name="balpan"
			Grid.Row="0"
			Grid.Column="0"></WrapPanel>
        <StackPanel
			x:Name="gpan"
			Grid.Row="0"
			Grid.Column="1"
			VerticalAlignment="Top"
			HorizontalAlignment="Center">
            <TextBox
				x:Name="allapot"
				Text="Nyerőszámok" />
            <Button
				x:Name="buttonSorsolas"
				Content="Sorsolás"
				Click="buttonSorsolas_Click" />
            <StackPanel>
                <Button
					x:Name="buttonNewGame"
					Content="Új játék"
					Click="buttonNewGame_Click" />
            </StackPanel>
            <StackPanel x:Name="nyertesSzamok">
                
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
